@model AppBoard.Entity.ToDo
<div class="row">
    <form action="Edit" method="post">
        <div class="form-group">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            <label for="Title" style="width:80px">Title</label>
            @Html.EditorFor(model => model.Title)
            @Html.HiddenFor(model => model.ToDoId)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            <label for="Description" style="width:80px">Description</label>
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="form-group">
            <label for="Status" style="width:80px">Status</label>
            <input id="Status" name="Status" type="checkbox" value="@Model.Status" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
    </form>
    @Html.ActionLink("Back to Home", "Index")
</div>


