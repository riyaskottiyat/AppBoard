            <label for="Description" style="width:80px">Description</label>
            <input id="Description" name="Description" type="text" value="" />
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        @*<div class="form-group">
            <label for="Status" style="width:80px">Status</label>
            <input id="Status" name="Status" type="checkbox" value="" />
        </div>*@
        <div class="form-group">
