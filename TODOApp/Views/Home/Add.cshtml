@model AppBoard.Entity.ToDo
<div class="row">
    <form action="Add" method="post">
        <div class="form-group">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            <label for="Title" style="width:80px">Title</label>
            <input id="Title" name="Title" type="text" value="" />
